<div class="card-body card-block">
        {{ form_start(form,{'attr':{'novalidate':'novalidate'}},{'attr':{'class':'form-horizontal'}}) }}
            <div class="row form-group">
                <div class="col col-md-3">
                    {{ form_label(form.intitule,"intitule :") }}
                </div>
                <div class="col-12 col-md-9">
                    {{ form_widget(form.intitule,{'attr':{'class':'form-control'}})}}
                    {% if form_errors(form.intitule) is not empty %}
                        <small class="form-text text-muted">{{ form_errors(form.intitule) }}</small>
                    {% endif %}
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    {{ form_label(form.textrec,"text :") }}
                </div>
                <div class="col-12 col-md-9">
                    {{ form_widget(form.textrec,{'attr':{'class':'form-control'}})}}
                    {% if form_errors(form.textrec) is not empty %}
                        <small class="form-text text-muted">{{ form_errors(form.textrec) }}</small>
                    {% endif %}
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    {{ form_label(form.emailu,"email :") }}
                </div>
                <div class="col-12 col-md-9">
                    {{ form_widget(form.emailu,{'attr':{'class':'form-control'}})}}
                    {% if form_errors(form.emailu) is not empty %}
                        <small class="form-text text-muted">{{ form_errors(form.emailu) }}</small>
                    {% endif %}
                </div>
            </div>
          
           

            <div align="center" class="card-footer">
                <button class="btn"><i class="zmdi zmdi-plus"></i>{{ button_label|default('Ajouter') }}</button>
                <button class="btn"><a style="color:black;" href="{{ path('app_reclamation_index') }}">Consulter Liste</a></button>
            </div>
        {{ form_end(form) }}
    </div>