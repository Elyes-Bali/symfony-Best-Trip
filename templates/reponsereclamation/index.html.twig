                <td>{{ reponsereclamation.prenom }}</td>
                <td>{{ reponsereclamation.intitule }}</td>
                <td>{{ reponsereclamation.textreprec }}</td>
                <td>{{ reponsereclamation.idrec }}</td>
                <td>{{ reponsereclamation.idreprec }}</td>
                <td>
                    <a href="{{ path('app_reponsereclamation_show', {'idreprec': reponsereclamation.idreprec}) }}">show</a>
