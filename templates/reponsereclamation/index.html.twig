{% include 'dashboard/navbar.html.twig' %}

{% block body %}
    <h1>Réponse réclamation index</h1>

    <table border='2' class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Prenom</th>
                <th>Intitule</th>
                <th>Textreprec</th>
                <th>Idrec</th>
                <th>Idreprec</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponsereclamation in reponsereclamations %}
